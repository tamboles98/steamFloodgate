    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug index.ts",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/index.ts",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx",
                "--env-file=.env"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ]
        }
    ]
}